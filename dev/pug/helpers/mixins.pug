mixin icon(name,mod,width,height)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod width=width height=height)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)

mixin pagination(amount, active, arrows)
	ul.pagination__list
		if (arrows === arrows)
			li.pagination__item
				a(href="#" title="Перейти на следующую страницу").pagination__link.pagination__link--prev
					span.visually-hidden Перейти на следующую страницу
					.
						<svg width="14" height="10" viewBox="0 0 14 10" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M8.46967 1.53033C8.17678 1.23744 8.17678 0.762563 8.46967 0.46967C8.76256 0.176777 9.23744 0.176777 9.53033 0.46967L13.5303 4.46967C13.8232 4.76256 13.8232 5.23744 13.5303 5.53033L9.53033 9.53033C9.23744 9.82322 8.76256 9.82322 8.46967 9.53033C8.17678 9.23744 8.17678 8.76256 8.46967 8.46967L11.1893 5.75H1.5C1.08579 5.75 0.75 5.41421 0.75 5C0.75 4.58579 1.08579 4.25 1.5 4.25H11.1893L8.46967 1.53033Z" fill="#9b111e"/>
						</svg>
		- for (var index = 1; index <= amount; index++)
			if (index === active)
				li.pagination__item
					a(title=`Текущая страница ${index}`).pagination__link.pagination__link--active= index
			else
				li.pagination__item
					a(href="#" title=`Перейти на страницу № ${index}`).pagination__link= index
		if (arrows === arrows)
			li.pagination__item
				a(href="#" title="Перейти на следующую страницу").pagination__link
					span.visually-hidden Перейти на следующую страницу
					.
